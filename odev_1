using System;
using System.Data.SqlClient;
using System.Windows.Forms;

namespace WindowsFormsApp2
{
    public partial class Form1 : Form
    {
        private string connectionString = "Server=localhost; Database=library; Integrated Security=True;";

        public Form1()
        {
            InitializeComponent();
        }

        private void btnEkle_Click(object sender, EventArgs e)
        {
            try
            {
                // Kullanıcıdan verileri al
                string eposta = txtEposta.Text;
                string telefon = txtTelefon.Text;
                string uyeAdi = txtUyeAdi.Text;
                string uyeSoyadi = txtUyeSoyadi.Text;
                string adresler = txtAdresler.Text;

                // Veritabanına bağlan
                using (SqlConnection conn = new SqlConnection(connectionString))
                {
                    conn.Open();

                    string query = "INSERT INTO uyeler (eposta, telefon, uyeAdi, uyeSoyadi, adresler) VALUES (@eposta, @telefon, @uyeAdi, @uyeSoyadi, @adresler)";

                    using (SqlCommand cmd = new SqlCommand(query, conn))
                    {
                        // Parametreleri ekle
                        cmd.Parameters.AddWithValue("@eposta", eposta);
                        cmd.Parameters.AddWithValue("@telefon", telefon);
                        cmd.Parameters.AddWithValue("@uyeAdi", uyeAdi);
                        cmd.Parameters.AddWithValue("@uyeSoyadi", uyeSoyadi);
                        cmd.Parameters.AddWithValue("@adresler", adresler);

                        // Veriyi ekle
                        cmd.ExecuteNonQuery();
                    }
                }

                MessageBox.Show("Veri başarıyla eklendi!");
                // Verileri temizle
                txtEposta.Clear();
                txtTelefon.Clear();
                txtUyeAdi.Clear();
                txtUyeSoyadi.Clear();
                txtAdresler.Clear();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Bir hata oluştu: " + ex.Message);
            }
        }
    }
}
